<!-- Show per page of Global Recipes -->

<div class="container">
    <div class="row mt-4 mb-1">
      <h3><%= global.name %></h3>
    </div>
  
    <div class="row">
      <div class="col-5">
        <div class="row">
          <!-- get image from global & use cloudinary URL -->
          <img
            src="<%= global.image %>"
            style="width: 400px; height: 400px; object-fit: cover;" class="mb-4"
          />
          <div>
              <h6>Yield:</h6>
              <p class="mb-3"><%= global.yield %></p>
  
              <h6>Created by: <%= global.createdBy.name %></h6>
          </div>
        </div>
        
      </div>
  
      <div class="col-7">
  
        <div class="row">
          <div class="col">
              <h6>Ingredients:</h6><ul>
            <% global.ingredients.forEach(ingredient => { %>
            <li>
              <%= ingredient %>
            </li>
            <% }); %></ul>
          </div>
  
          <div class="col">
              <h6>Instructions:</h6><ol>
            <% global.instructions.forEach(instruction => { %>
            <li>
              <%= instruction %>
            </li>
            <% }); %></ol>
          </div>
        </div>
  
      </div>
  
    </div>
  
    <div class="row mt-2">
      <a href="/global/index" class="btn btn-lg btn-light mb-5"
        >Back to Global Recipes</a>
    </div>
  </div>
  